{
  "name": "repox",
  "version": "1.0.0",
  "description": "Lightweight monorepo for many huge projects.",
  "author": "Jakub Olejarczyk",
  "license": "ISC",
  "scripts": {
    "remove": "rm -rf dist",
    "build": "tsc && cp package.json dist && tsc-alias -p tsconfig.json",
    "link": "npm link ./dist",
    "unlink": "npm unlink ./dist && npm uninstall repox -g",
    "test": "jest --silent",
    "up": "npm run test && npm run build && npm run link",
    "down": "npm run unlink && npm run remove",
    "generate": "node dist/repox/apps/repox/src/main.js generate project --name=dog --type=tool --scheme=typescript"
  },
  "devDependencies": {
    "@types/command-exists": "^1.2.0",
    "@types/core-js": "^2.5.5",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.3",
    "jest": "^29.6.0",
    "repox": "^1.2.31",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "command-exists": "^1.2.9",
    "core-js": "^3.31.0",
    "glob": "^10.3.1",
    "tsyringe": "^4.8.0"
  }
}
