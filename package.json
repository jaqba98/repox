{
  "name": "repox",
  "version": "1.2.13",
  "description": "Lightweight monorepo for many huge projects.",
  "main": "./apps/repox/src/index.js",
  "bin": "./apps/repox/src/index.js",
  "author": "Jakub Olejarczyk",
  "license": "ISC",
  "scripts": {
    "remove": "rm -rf dist",
    "build": "tsc && cp package.json dist && tsc-alias -p tsconfig.json && cp README.md dist",
    "link": "npm link ./dist",
    "unlink": "npm unlink ./dist && npm uninstall repox -g",
    "test": "jest --silent",
    "up": "npm run test && npm run build && npm run link",
    "down": "npm run unlink && npm run remove",
    "serve": "cd tmp/dog && repox g p -n=test -t=app"
  },
  "devDependencies": {
    "@types/command-exists": "^1.2.0",
    "@types/core-js": "^2.5.5",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.0",
    "jest": "^29.5.0",
    "repox": "^1.2.13",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "command-exists": "^1.2.9",
    "core-js": "^3.31.0",
    "tsyringe": "^4.7.0"
  }
}
