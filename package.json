{
  "name": "repox",
  "version": "1.0.0",
  "description": "Lightweight monorepo for many huge projects.",
  "author": "Jakub Olejarczyk",
  "license": "ISC",
  "scripts": {
    "repox:build": "repox build project --name=repox",
    "repox:version": "node dist/repox/apps/repox/src/main.js --version",
    "generate:workspace": "node dist/repox/apps/repox/src/main.js generate workspace --name=dog",
    "generate:project": "node dist/repox/apps/repox/src/main.js generate project --name=dog --type=lib --scheme=@lib/ts",
    "build:project": "node dist/repox/apps/repox/src/main.js build project --name=repox --watch",
    "publish:npm": "node dist/repox/apps/repox/src/main.js publish npm --name=repox"
  },
  "devDependencies": {
    "@types/command-exists": "^1.2.0",
    "@types/core-js": "^2.5.5",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "jest": "^29.6.1",
    "repox": "^1.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "command-exists": "^1.2.9",
    "core-js": "^3.31.1",
    "glob": "^10.3.3",
    "jsonschema": "^1.4.1",
    "tsyringe": "^4.8.0"
  }
}
