{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "rootDir": "projects",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lib/launcher": [
        "projects/libs/launcher/src/index.ts"
      ],
      "@lib/utils": [
        "projects/libs/utils/src/index.ts"
      ],
      "@lib/repox-workspace": [
        "projects/libs/cli/repox-workspace/src/index.ts"
      ],
      "@lib/repox-program": [
        "projects/libs/cli/repox-program/src/index.ts"
      ],
      "@lib/cli-main": [
        "projects/libs/cli/cli-main/src/index.ts"
      ],
      "@lib/repox-domain": [
        "projects/libs/cli/repox-domain/src/index.ts"
      ],
      "@lib/repox-const": [
        "projects/libs/cli/repox-const/src/index.ts"
      ],
      "@lib/program-step": [
        "projects/libs/program-step/src/index.ts"
      ],
      "@lib/param-dto": [
        "projects/libs/param-dto/src/index.ts"
      ],
      "@lib/param-domain": [
        "projects/libs/param-domain/src/index.ts"
      ],
      "@lib/model": [
        "projects/libs/model/src/index.ts"
      ],
      "@lib/logger": [
        "projects/libs/logger/src/index.ts"
      ],
      "@lib/repox-launcher": [
        "projects/libs/cli/repox-launcher/src/index.ts"
      ],
      "@lib/const": [
        "projects/libs/const/src/index.ts"
      ],
      "@lib/jest": [
        "projects/libs/module/jest/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/jest.config.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}